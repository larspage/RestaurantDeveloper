{
  "name": "restaurant-developer-backend",
  "version": "1.0.0",
  "description": "Backend API for Restaurant Developer Platform",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --detectOpenHandles --forceExit --runInBand --verbose",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit --runInBand",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mongoose": "^7.5.0",
    "helmet": "^7.0.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "morgan": "^1.10.0",
    "@supabase/supabase-js": "^2.38.0"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFilesAfterEnv": ["./tests/jest.setup.js"],
    "testTimeout": 10000,
    "verbose": true,
    "clearMocks": true,
    "restoreMocks": true,
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
} 